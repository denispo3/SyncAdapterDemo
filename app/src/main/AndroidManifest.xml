<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="presentation.thinkmobiles.com.syncadapterdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="ANDROID.PERMISSION.READ_SYNC_SETTINGS" />
    <uses-permission android:name="ANDROID.PERMISSION.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!--Main activity-->
        <activity
            android:name="com.thinkmobiles.demo.syncadapter.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Authenticator service-->
        <service android:name="com.thinkmobiles.demo.syncadapter.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!--Authenticator content provider-->
        <provider
            android:name="com.thinkmobiles.demo.syncadapter.SyncAdapterProvider"
            android:authorities="presentation.thinkmobiles.com.syncadapterdemo.provider"
            android:exported="false"
            android:syncable="true" />

        <!--Syncadapter service-->
        <service
            android:name="com.thinkmobiles.demo.syncadapter.SyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
    </application>

</manifest>
